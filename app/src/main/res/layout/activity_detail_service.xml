<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.DetailServiceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@drawable/hiasan_abu2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtJobId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Job ID"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txtConsumerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Consumer name"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtWorkLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Work location"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/btnTakeJob"
                android:background="@drawable/tombol_bulet"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AMBIL PEKERJAAN" />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>